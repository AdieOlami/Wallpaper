<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.olar.wallpaper.Utils.SquareImage
        android:id="@+id/item_collection_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent_color"
        android:padding="12dp">

    <TextView
        android:id="@+id/item_collection_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Base.TextAppearance.AppCompat.Medium"
        android:text="@string/this_is_awesome"
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/item_collection_total_photos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_12_photos"
        android:textColor="@color/white"/>

    </RelativeLayout>
</FrameLayout>